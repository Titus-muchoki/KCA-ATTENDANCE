{{#partial "content"}}

    {{#if editStudent }}
        <h1>Edit this student attendace!</h1>
        <form action="/students/{{student.id}}" method="post">
            <br>
            <label for="name">Edit this student name</label>
            <input id="name" name="name" type="text" value="{{student.name}}">
            <br>
            <label for="reg">Edit this student reg</label>
            <input id="reg" name="reg" type="text" value="{{student.reg}}">
            <br>
            <label for="email">Edit this student email</label>
            <input id="email" name="email" type="text" value="{{student.email}}">
            <br>
            <label for="tel">Edit this student tel</label>
            <input id="tel" name="tel" type="text" value="{{student.tel}}">
            <br>
            <label for="unit">Edit this student unit</label>
            <input id="unit" name="unit" type="text" value="{{student.unit}}">
            <br>
            <label for="lecture">Edit this student lecture</label>
            <input id="lecture" name="lecture" type="text" value="{{student.lecture}}">
            <br>
            <label for="dateTaught">Edit this student dateTaught</label>
            <input id="dateTaught" name="dateTaught" type="date" value="{{student.dateTaught}}">
            <br>
            <label for="studentRemark">Edit this student studentRemark</label>
            <input id="studentRemark" name="studentRemark" type="text" value="{{student.studentRemark}}">
            <br>
            <label for="courseId">Update this student course:</label>
            <select id="courseId" name="courseId">
                {{#each courses}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right course?<a href="/courses/new">Add a new course first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <h1>Add a new students!</h1>

        <form action="/students" method="post">
            {{#if courses}}
                <br>
                <label for="name">Edit this student name</label>
                <input id="name" name="name" type="text">
                <br>
                <label for="reg">Edit this student reg</label>
                <input id="reg" name="reg" type="text">
                <br>
                <label for="email">Edit this student email</label>
                <input id="email" name="email" type="text">
                <br>
                <label for="tel">Edit this student tel</label>
                <input id="tel" name="tel" type="text">
                <br>
                <label for="unit">Edit this student unit</label>
                <input id="unit" name="unit" type="text">
                <br>
                <label for="lecture">Edit this student lecture</label>
                <input id="lecture" name="lecture" type="text">
                <br>
                <label for="dateTaught">Edit this student dateTaught</label>
                <input id="dateTaught" name="dateTaught" type="date">
                <br>
                <label for="studentRemark">Edit this student studentRemark</label>
                <input id="studentRemark" name="studentRemark" type="text">
                <br>
                <label for="courseId">Course for this student:</label>
                <select id="courseId" name="courseId">
                    {{#each courses}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right course?<a href="/courses/new">Add a new course</a></p>
            {{else}}
                <h3> You'll need to add a course before you add a student. <a href="/courses/new">Add one here.</a> </h3>

            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}

{{/partial}}

